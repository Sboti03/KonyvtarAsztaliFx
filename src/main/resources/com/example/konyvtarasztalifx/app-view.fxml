<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="289.0" prefWidth="365.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.example.konyvtarasztalifx.AppController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Button mnemonicParsing="false" onAction="#deleteClick" text="Törlés" />
      <TableView fx:id="bookTable" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="titleCol" prefWidth="75.0" text="Cím" />
          <TableColumn fx:id="authorCol" prefWidth="75.0" text="Szerző" />
            <TableColumn fx:id="publishYearCol" prefWidth="75.0" text="Kiadás éve" />
            <TableColumn fx:id="pageCountCol" prefWidth="75.0" text="Oldalszám" />
        </columns>
      </TableView>
   </children>
</VBox>
